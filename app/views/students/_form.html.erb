<%= form_with(model: student, local: true) do |form| %>
  <% if student.errors.any? %>
    <% student.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

<div class="form-row">
  <div class="col-md-6 mb-4">
    <p>First Name</p>
    <%= form.text_field :f_name, id: :student_f_name, class: 'form-input' %>
  </div>

  <div class="col-md-6 mb-4">
    <p>Last Name</p>
    <%= form.text_field :l_name, id: :student_l_name, class: 'form-input' %>
  </div>
</div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone, id: :student_phone %>
  </div>

  <div class="field">
    <%= form.label :address_one %>
    <%= form.text_field :address_one, id: :student_address_one %>
  </div>

  <div class="field">
    <%= form.label :address_two %>
    <%= form.text_field :address_two, id: :student_address_two %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :student_email %>
  </div>

  <div class="field">
    <%= form.label :city %>
    <%= form.text_field :city, id: :student_city %>
  </div>

  <div class="field">
    <%= form.label :state %>
    <%= form.text_field :state, id: :student_state %>
  </div>

  <div class="field">
    <%= form.label :zip %>
    <%= form.text_field :zip, id: :student_zip %>
  </div>

  <div class="field">
    <%= form.label :dob %>
    <%= form.date_select :dob, id: :student_dob %>
  </div>

  <div class="field">
    <%= form.label :course %>
    <%= form.number_field :course, id: :student_course %>
  </div>

  <div class="field">
    <%= form.label :military_status %>
    <%= form.number_field :military_status, id: :student_military_status %>
  </div>

  <div class="field">
    <%= form.label :education %>
    <%= form.number_field :education, id: :student_education %>
  </div>

  <div class="field">
    <%= form.label :experience %>
    <%= form.number_field :experience, id: :student_experience %>
  </div>

  <div class="field">
    <%= form.label :employment_status %>
    <%= form.number_field :employment_status, id: :student_employment_status %>
  </div>

  <div class="field">
    <%= form.label :salary %>
    <%= form.number_field :salary, id: :student_salary %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

















